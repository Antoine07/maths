   "source": [
    "import numpy as np\n",
    "\n",
    "def f(x):\n",
    "    return x**2 - 2\n",
    "\n",
    "# Intervalle où f change de signe : f(1) < 0 et f(2) > 0\n",
    "a, b = 1, 2\n",
    "epsilon = 1e-6\n",
    "\n",
    "while (b - a) > epsilon:\n",
    "    m = (a + b) / 2\n",
    "    if f(a) * f(m) <= 0:\n",
    "        b = m\n",
    "    else:\n",
    "        a = m\n",
    "\n",
    "x0 = (a + b) / 2\n",
    "print(\"Racine ≈\", x0)"
   ]
